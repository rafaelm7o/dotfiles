{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
  brew {{ . | quote }}
{{ end -}}
{{- if eq .chezmoi.hostname "machina" }}
  {{- range .packages.darwin.casks -}}
    cask {{ . | quote }}
  {{ end -}}
{{ end -}}
EOF
{{ end -}}
